{
  "extends": [
    "tslint:recommended",
    "@fay-react/tool/config/typescript/tslint-rules.json",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "rules": {
    "jsx-no-lambda": false,
    "jsx-boolean-value": false,
    "ordered-imports": false
  },
  "linterOptions": {
    "exclude": [
      "node_modules/**/*.{j,t}s",
      "**/node_modules/**/*.{j,t}s",
      "src/lib/highcharts/**/*.{j,t}s",
      "**/*.d.ts"
    ]
  }
}
